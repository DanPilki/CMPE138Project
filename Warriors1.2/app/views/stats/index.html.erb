<p id="notice"><%= notice %></p>

<h1>Stats</h1>

<table>
  <thead>
    <tr>
      <th>Point</th>
      <th>Assist</th>
      <th>Rebound</th>
      <th>Steal</th>
      <th>Foul</th>
      <th>Games</th>
      <th>Players</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stats.each do |stat| %>
      <tr>
        <td><%= stat.point %></td>
        <td><%= stat.assist %></td>
        <td><%= stat.rebound %></td>
        <td><%= stat.steal %></td>
        <td><%= stat.foul %></td>
        <td><%= stat.games_id %></td>
	<td><%= stat.players_id %></td>
        <td><%= link_to 'Show', stat %></td>
        <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
        <td><%= link_to 'Destroy', stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

