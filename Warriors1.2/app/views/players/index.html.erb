<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>F name</th>
      <th>L name</th>
      <th>Dob</th>
      <th>Weight</th>
      <th>Height</th>
      <th>Position</th>
      <th>Player</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.F_name %></td>
        <td><%= player.L_name %></td>
        <td><%= player.DOB %></td>
        <td><%= player.weight %></td>
        <td><%= player.height %></td>
        <td><%= player.position %></td>
        <td><%= player.player_id %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

