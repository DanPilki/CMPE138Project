<p id="notice"><%= notice %></p>

<h1>Opp Team Games</h1>

<table>
  <thead>
    <tr>
      <th>Opp teams</th>
      <th>Games</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opp_team_games.each do |opp_team_game| %>
      <tr>
        <td><%= opp_team_game.opp_teams %></td>
        <td><%= opp_team_game.games %></td>
        <td><%= link_to 'Show', opp_team_game %></td>
        <td><%= link_to 'Edit', edit_opp_team_game_path(opp_team_game) %></td>
        <td><%= link_to 'Destroy', opp_team_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

